@{
  Layout = "_Layout";
}
<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h3>All bands:</h3>
      <hr />
      @if (Model.Count != 0)
      {
        <ul>
        @foreach (var band in Model)
        {
          <li><a href='/bands/@band.GetId()'>@band.GetBandName(), @band.GetGenre()</a></li>
        }
        </ul>
      }
      <h4><a href="/bands/new">Add new band</a></h4>
      <h4><a href="/">Return to Home</a></h4>
    </div>
  </div>
</div>
